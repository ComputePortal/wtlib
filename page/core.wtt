export template core(
  title=null, 
  description=null, 
  bodyStyle={height: 100%},
) extends=html super(style={height: 100%})
  head
    if ($title != null)
      title
        print $title

    if ($description != null)
      meta(name=description, content=$description)

    block head

  body(style=$bodyStyle)
    block default
